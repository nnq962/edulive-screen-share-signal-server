<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0">

    <!-- Status Bar -->
    <androidx.cardview.widget.CardView
        android:id="@+id/statusLayout"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="8dp"
        android:background="#ffffff"
        android:elevation="4dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <TextView
                android:id="@+id/statusTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Screen Share Status"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connecting..."
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/statusTitle"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/deviceIdText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Device ID: Loading..."
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/statusText"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/toggleConnectionBtn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:minWidth="120dp"
                android:text="Reconnect"
                android:textAllCaps="false"
                android:backgroundTint="#1976D2"
                android:textColor="@android:color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/accessibilitySettingsBtn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:minWidth="100dp"
                android:text="Accessibility"
                android:textAllCaps="false"
                android:backgroundTint="#4CAF50"
                android:textColor="@android:color/white"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/toggleConnectionBtn" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Info Card (replaces black screen) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/infoLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:background="#ffffff"
        android:elevation="4dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/statusLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp">

            <TextView
                android:id="@+id/infoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“± Screen Sharing Active"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/infoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your screen is being shared to the web.\n\nYou can minimize this app and continue using your phone normally.\n\nThe web viewers will see your screen in real-time."
                android:textSize="14sp"
                android:textColor="#666666"
                android:lineSpacingExtra="4dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/infoTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/wsInfoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WebSocket: ws://192.168.1.101:3001/ws"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/infoText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Hidden SurfaceView (still needed for WebRTC but not visible) -->
    <org.webrtc.SurfaceViewRenderer
        android:id="@+id/surfaceView"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:background="#000000"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Hidden elements for compatibility -->
    <androidx.cardview.widget.CardView
        android:id="@+id/notificationLayout"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="#ccffe5"
        android:elevation="5dp"
        android:visibility="gone"
        app:cardCornerRadius="15dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/notificationTitle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:text="Someone is requiring your screen share."
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/notificationAcceptBtn"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="#00994c"
                android:text="accept"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/notificationDeclineBtn"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/notificationDeclineBtn"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="#cc0000"
                android:text="decline"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/notificationAcceptBtn" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/requestLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="3dp"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/targetEt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:hint="target username" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/requestBtn"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="2"
            android:text="request" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/disconnectBtn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="disconnect"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>